<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.main {
			width: 100%;
			padding-left: 6px;
			padding-bottom: 2px;
			background-color: #ddd;
		}
		.outer {
			width: 100%;
			height: 29px;
			border-bottom: 0px solid black;
			
		}
		.creatorFilter {
			height: 24px;
			width: 225px;
		}
		.setFilter {
			width: 220px;
		}
		.button {
			height: 25px;	
			border: 1px solid #999;
			pointer:hand;
			cursor:pointer;
		}
	</ui:style>

	<g:VerticalPanel styleName='{style.main}'>
	  	<g:HorizontalPanel ui:field='sidePanelTopbar' styleName='{style.outer}'>
	  		<g:cell verticalAlignment='ALIGN_MIDDLE' width="232px">
	  			<g:Label></g:Label>
	  		</g:cell>
	  		<g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment='ALIGN_MIDDLE'>
	  			<g:SimplePanel ui:field='clearButtonPanel' />
	  		</g:cell>
	  	</g:HorizontalPanel>
  	</g:VerticalPanel>
</ui:UiBinder>
