<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style type='org.mindinformatics.gwt.domeo.client.ui.east.resource.references.CitationReferencesPanel.LocalCss'>	
		.body {
			width: 100%;
			
			padding: 3px;
		}

		.indexOdd {
			border-bottom: 2px solid #999;
			border-right: 4px solid #EEEEFF;
		}
		.indexEven {
			border-bottom: 2px solid #999;
			border-right: 4px solid #fff;
		}
	</ui:style>
	
	<g:VerticalPanel styleName='{style.body}' ui:field='body'>	
	</g:VerticalPanel>
</ui:UiBinder>
