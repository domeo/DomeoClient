<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>	
		.body {
			width: 100%;
			padding: 0px;
			padding-left: 1px;
			border-bottom: 1px #ddd solid;
		}
		
		.bold {
			padding-left:0px;
			font-weight: bold;	
		}
		
		.boldUnderlined {
			font-weight: bold;	
		}
		
		.firstline {
			width: 458px;
			height: 24px;
		}
		
		.secondline {
			width: 458px;
		}
		
		.provenance {
			
		}
	</ui:style>
	
	<g:VerticalPanel styleName='{style.body}' ui:field='body'>	
		<g:cell>
			<g:HorizontalPanel styleName='{style.firstline}'>
				<g:cell horizontalAlignment='ALIGN_LEFT'>
					<g:Label ui:field='nameEditableField' styleName='{style.bold}' />
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_RIGHT'>
					<g:SimplePanel ui:field='itemsNumberLabel' styleName='{style.boldUnderlined}'/>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell>
			<g:HorizontalPanel styleName='{style.secondline}'>
				<g:cell horizontalAlignment='ALIGN_LEFT'>
					<g:HorizontalPanel ui:field='provenanceLabel' styleName='{style.provenance}'/>
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_LEFT'>
					<g:HorizontalPanel ui:field='actionLabel' styleName='{style.provenance}'/>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>