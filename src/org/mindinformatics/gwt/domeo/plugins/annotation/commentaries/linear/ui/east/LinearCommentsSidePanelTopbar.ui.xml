<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.main {
			width: 100%;
			border-bottom: 2px solid #ddd;
			padding-bottom: 2px;
			padding-top: 2px;
			background-color: #ddd;
			border-bottom: 1px solid #aaa;
		}
		.outer {
			width: 100%;
			height: 18px;
			padding-left: 6px;
			padding-right: 2px;
			
			border-bottom: 0px solid black;
		}
		
		.outer2 {	
			width: 100%;
			height: 18px;
			padding-left: 0px;
			padding-top: 2px;
			background-color: #fff;
		}
		
		.under {
			width: 100%;
			height: 18px;
			padding-left: 6px;
			background-color: #fff;
		}
		
		.clickable {
			pointer: hand;
			cursor: pointer;
		}
		
		.icon {
			padding-right: 1px;
		}
		
	</ui:style>

	<g:VerticalPanel styleName='{style.main}'>
		<g:cell height="18px">
		  	<g:HorizontalPanel ui:field='sidePanelTopbar' styleName='{style.outer}'>
		  		<g:cell>
		  			<g:SimplePanel ui:field='seeThreadsPanel' styleName='{style.clickable}'/>
		  		</g:cell>	
		  		<g:cell>
		  			<g:SimplePanel ui:field='newThreadPanel' styleName='{style.clickable}'/>
		  		</g:cell>
		  		<g:cell>
		  			<g:SimplePanel ui:field='seeLocalizedThreadsPanel' styleName='{style.clickable}'/>
		  		</g:cell>
		  	</g:HorizontalPanel>
	  	</g:cell>
	  	<g:cell height="18px">
	  		<g:HorizontalPanel styleName='{style.outer2}'>
	  			<g:cell>
				  	<g:SimplePanel ui:field='secondLineTopbar' styleName='{style.under}'/>
				</g:cell>
		  		<g:cell width="60px">
		  			<g:SimplePanel ui:field='explorePanelLabel' styleName='{style.clickable}'/>
		  		</g:cell>
		  		<g:cell width="18px">
					<g:SimplePanel ui:field='explorePanelIcon' styleName='{style.icon}'/>
				</g:cell>
		  	</g:HorizontalPanel>
	  	</g:cell>
  	</g:VerticalPanel>
</ui:UiBinder>
