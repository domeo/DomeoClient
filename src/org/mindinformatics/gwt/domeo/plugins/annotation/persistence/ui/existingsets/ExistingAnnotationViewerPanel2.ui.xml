<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

<ui:style>
	.outer {
	    padding-left: 4px;
	    padding-top: 10px;
	    padding-bottom:16px;
	    height: 500px;	
	    font-size: 11px;
	}
	
	.message {
		padding-left: 5px;
	}
	
	.tree {
      width: 500px;
      border: 1px solid #ccc;
    }
    
    .selectedLabel {
      padding-left: 15px;
    }
  	
  			.importBtn {
			min-width: 100px;
		}
</ui:style>


<g:HorizontalPanel  ui:field='main'>
	<g:cell width="600px">
	<g:VerticalPanel>
  	<g:ScrollPanel ui:field='left' styleName='{style.outer}'>
  	</g:ScrollPanel>
  	<g:cell horizontalAlignment='ALIGN_CENTER'>
  	<g:Button ui:field='importButton' styleName='{style.importBtn}'>Import</g:Button>
  	</g:cell>
  	<g:cell horizontalAlignment='ALIGN_CENTER'>
  	<g:Button ui:field='selectAllButton' styleName='{style.importBtn}'>select All Sets</g:Button>
  	</g:cell>
  	</g:VerticalPanel>
  	</g:cell>
  	<g:cell>
  	<g:VerticalPanel>
  		<g:Label
		            addStyleNames='{style.selectedLabel}'
		            ui:field='selectedLabel' />
		<g:VerticalPanel ui:field='preview'>
		
		</g:VerticalPanel>
  	</g:VerticalPanel>
  	</g:cell>
  </g:HorizontalPanel>
</ui:UiBinder>
