<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
	.outer {
		height: 30px;
		padding-left: 0px;
		padding-top: 0px;
		width: 800px;
	}
	
	.buttonsPanel {
		position: absolute;
		right: 20px;
		float: right;
		padding-top: 4px;
		padding-right: 0px;
		padding-left: 2px;
		height: 0px;
		max-height: 20px;
		display: block;
	}
	
	.setPanel {
		padding-left: 5px;
	}
	
	.rightColumn {
		padding-left: 0px;
		/*padding-top: 24px;*/
		width: 100%;
		min-width: 350px;
		height: 200px;
	}
	
	.leftColumn {
		width: 350px;
		vertical-align: top;
	}
	
	.panel {
		width: 100%;
		vertical-align: top;
		padding-top: 10px;
	}
	
	.provenance {
		backgorund-color: gray;
		padding-top: 3px;
		padding-left: 10px;
		cursor: pointer;
		cursor: hand;
	}
	
	.subTitle {
		/*width: 99%;*/
		background-color: #eee;
		padding-left: 4px;
		padding-right: 14px;
		padding-top: 2px;
		padding-bottom: 2px;
		font-weight: bold;
		border-bottom-right-radius: 10px;
		border-top-right-radius: 10px;
	}
	
	.subPanel {
		min-height: 40px;
	}
	
	.newQualifierPanel {
		min-height: 26px;
		display: inline;
	}
	
	.inner {
		padding-top: 3px;
		padding-bottom: 3px;
		cursor: pointer;
		cursor: hand;
	}
	
	.inner2 {
		padding-top: 3px;
		padding-bottom: 3px;
		padding-left: 3px;
	}
	
	.qualifiersLabel {
		font-weight: bold;
		padding-right: 3px;
	}
	
	.titlebar {
		width: 350px;
		background-color: #DDDDDD;
		border-top: 3px solid white;
	}
	
	.titlebarright {
		width: 350px;
		background-color: #DDDDDD;
		border-top: 3px solid white;
	}
	
	.commentBody {
		padding-top: 3px;
		padding-left: 3px;
		color: #333;
		font-style: normal;
		width: 350px;
		height: 100px;
		font-size: 12px;
	}
	
	.elementType {
		padding-right: 2px;
		display: inline;
		white-space: nowrap;
	}
	
	z.titleLeft {
		padding-left: 4px;
	}
	
	.listbox {
		vertical-align: top;
		padding-left: 1px;
		padding-right: 12px;
	}
	</ui:style>

	<!-- <ui:with field='resources' type='org.mindinformatics.gwt.annotator.client.Annotator.Resources' 
		/> -->

	<g:VerticalPanel ui:field='container' styleName='{style.outer}'>

		<g:HorizontalPanel ui:field='buttonsPanel'
			styleName='{style.buttonsPanel}'>
			<g:SimplePanel styleName='{style.setPanel}'>
				<g:ListBox ui:field='annotationSet'></g:ListBox>
			</g:SimplePanel>
		</g:HorizontalPanel>

		<g:HorizontalPanel ui:field='header' styleName='{style.inner}'>
			<g:Label ui:field="label1" styleName='{style.qualifiersLabel}'>PDDI Annotation</g:Label>
			<g:FlowPanel ui:field="newQualifiers" styleName='{style.newQualifierPanel}'></g:FlowPanel>
		</g:HorizontalPanel>


		<g:HorizontalPanel styleName='{style.panel}'>

			<g:cell>

				<g:VerticalPanel styleName='{style.leftColumn}'>

					<!-- Drug 1 -->

					<g:Label ui:field="drugLabel1" styleName='{style.qualifiersLabel}'>Drug 1:</g:Label>

					<!-- Type -->

					<g:HorizontalPanel styleName='{style.titlebar}'>
						<g:Label ui:field="type1" styleName='{style.titleLeft}'>Type (type of mention
							within the sentence for each drug):</g:Label>
					</g:HorizontalPanel>

					<g:HorizontalPanel styleName='{style.panel}'>
						<g:RadioButton ui:field="typeai1" name="descriptpk"
							checked="false">Active Ingredient</g:RadioButton>
						<g:RadioButton ui:field="typemb1" name="descriptpk"
							checked="false">Metabolite</g:RadioButton>
						<g:RadioButton ui:field="typedp1" name="descriptpk"
							checked="false">Drug Product</g:RadioButton>
					</g:HorizontalPanel>


					<!-- Role -->

					<g:HorizontalPanel styleName='{style.titlebar}'>
						<g:Label ui:field="role1" styleName='{style.titleLeft}'>Role (each drug plays
							within the interaction):</g:Label>
					</g:HorizontalPanel>

					<g:HorizontalPanel styleName='{style.panel}'>
						<g:RadioButton ui:field="roleob1" name="descriptpd"
							checked="false">Object</g:RadioButton>
						<g:RadioButton ui:field="rolepp1" name="descriptpd"
							checked="false">Precipitant</g:RadioButton>
					</g:HorizontalPanel>


					<!-- Drug 2 -->

					<g:Label ui:field="drugLabel2" styleName='{style.qualifiersLabel}'>Drug 2:</g:Label>

					<!-- Type -->
					<g:HorizontalPanel styleName='{style.titlebar}'>
						<g:Label ui:field="type2" styleName='{style.titleLeft}'>Type (type of mention
							within the sentence for each drug):</g:Label>
					</g:HorizontalPanel>

					<g:HorizontalPanel styleName='{style.panel}'>
						<g:RadioButton ui:field="typeai2" name="descriptpk"
							checked="false">Active Ingredient</g:RadioButton>
						<g:RadioButton ui:field="typemb2" name="descriptpk"
							checked="false">Metabolite</g:RadioButton>
						<g:RadioButton ui:field="typedp2" name="descriptpk"
							checked="false">Drug Product</g:RadioButton>
					</g:HorizontalPanel>


					<!-- Role -->

					<g:HorizontalPanel styleName='{style.titlebar}'>
						<g:Label ui:field="role2" styleName='{style.titleLeft}'>Role (each drug plays
							within the interaction):</g:Label>
					</g:HorizontalPanel>

					<g:HorizontalPanel styleName='{style.panel}'>
						<g:RadioButton ui:field="roleob2" name="descriptpd"
							checked="false">Object</g:RadioButton>
						<g:RadioButton ui:field="rolepp2" name="descriptpd"
							checked="false">Precipitant</g:RadioButton>
					</g:HorizontalPanel>

				</g:VerticalPanel>
			</g:cell>


			<g:cell>

				<g:VerticalPanel ui:field='rightColumn' styleName='{style.rightColumn}'>

					<!-- Statement -->

					<g:HorizontalPanel styleName='{style.titlebar}'>
						<g:Label ui:field="statement" styleName='{style.titleLeft}'>Statement (data
							type that is described):</g:Label>
					</g:HorizontalPanel>

					<g:HorizontalPanel styleName='{style.panel}'>
						<g:RadioButton ui:field="statementqu" name="statementqu"
							checked="false">quantitative</g:RadioButton>
						<g:RadioButton ui:field="statementql" name="statementql"
							checked="false">qualitative</g:RadioButton>
					</g:HorizontalPanel>


					<!--Modality: -->

					<g:HorizontalPanel styleName='{style.titlebar}'>
						<g:Label ui:field="modality" styleName='{style.titleLeft}'>Modality (observed
							effect that is described):</g:Label>
					</g:HorizontalPanel>

					<g:HorizontalPanel ui:field='header8' styleName='{style.panel}'>
						<g:RadioButton ui:field="modalitypt" name="modalitypt"
							checked="false">Positive</g:RadioButton>
						<g:RadioButton ui:field="modalitynt" name="modalitynt"
							checked="false">Negative</g:RadioButton>
					</g:HorizontalPanel>


					<!-- extra resource -->

					<g:HorizontalPanel styleName='{style.titlebarright}'>
						<g:Label ui:field="extrarelabel" styleName='{style.titleLeft}'>Comment:</g:Label>
					</g:HorizontalPanel>

					<g:HorizontalPanel ui:field='header7' styleName='{style.panel}'>
						<g:TextArea ui:field='extrare' styleName='{style.commentBody}'></g:TextArea>
					</g:HorizontalPanel>


				</g:VerticalPanel>
			</g:cell>

		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder>
