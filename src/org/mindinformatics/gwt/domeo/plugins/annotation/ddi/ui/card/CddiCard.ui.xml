<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
	.body {
		width: 100%;
		padding-top: 4px;
	}
	
	.icon {
		padding-right: 1px;
	}
	
	.clickable {
		pointer: hand;
		cursor: pointer;
	}
	
	.content {
		background-color: #F0F8FF;
		border-top-right-radius: 10px;
		-moz-border-radius-topright: 10px;
		border-bottom-right-radius: 10px;
		-moz-border-radius-bottomright: 10px;
		padding: 3px 5px 3px 3px;
	}
	
	.panel {
		width: 100%;
		vertical-align: top;
		padding-top: 8px;
	}
	
	.contentItem {
		display: inline;
	}
	
	.contentItemType {
		font-weight: bold;
		display: inline;
		padding-right: 4px;
	}
	
	.contentFrame {
		padding: 0px 1px 4px 0px;
	}
	
	.content {
		padding: 3px 5px 3px 3px;
		white-space: nowrap;
	}
	
	.provenance {
		width: 500px;
		background-color: #EEE;
		border-top-right-radius: 10px;
		-moz-border-radius-topright: 10px;
		border-bottom-right-radius: 10px;
		-moz-border-radius-bottomright: 10px;
		padding: 3px 5px 3px 3px;
	}
	
	.provenanceFrame {
		padding: 0px 1px 0px 0px;
	}
	
	.tablelabel {
		background-color: #EEE;
		padding: 3px 5px 3px 3px;
	}
	
	.tablevalue {
		background-color: #F0F8FF;
		padding: 3px 5px 3px 3px;
	}
	</ui:style>

	<g:VerticalPanel styleName='{style.body}' ui:field='body'>

		<g:HorizontalPanel styleName='{style.provenance}'
			ui:field='provenance'>
		</g:HorizontalPanel>
		
		<!-- DIKB assertion type -->

		<g:HorizontalPanel >
			<g:Label ui:field="assertionTypeLabel" styleName='{style.tablelabel}'>Assertion type:</g:Label>
			<g:Label ui:field="assertType" styleName='{style.tablevalue}'></g:Label>
		</g:HorizontalPanel>


		<g:HorizontalPanel styleName='{style.contentFrame}'>
			<g:FlowPanel  ui:field='content'>
				<g:Label ui:field='type' styleName='{style.contentItemType}'></g:Label>
				<g:Label ui:field='text' styleName='{style.contentItem}'></g:Label>
			</g:FlowPanel>
		</g:HorizontalPanel>

		<g:HorizontalPanel ui:field="cardResults" styleName='{style.content}'>

			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="drug1label" styleName='{style.tablelabel}'>Drug 1</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label ui:field="drug1" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>

			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="role1label" styleName='{style.tablelabel}'>Drug 1 role</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="role1" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>

			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="type1label" styleName='{style.tablelabel}'>Drug 1 type</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="type1" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>

			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="drug2label" styleName='{style.tablelabel}'>Drug 2</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="drug2" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>


			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="role2label" styleName='{style.tablelabel}'>Drug 2 role</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="role2" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>

			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="type2label" styleName='{style.tablelabel}'>Drug 2 type</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="type2" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>

		<!-- 	<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="statementlabel" styleName='{style.tablelabel}'>Statement</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="statement" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>
 		-->
 		
			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="modalitylabel" styleName='{style.tablelabel}'>Modality</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="modality" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>

			<!-- evidence type -->

			<g:VerticalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="evidenceTypeLabel" styleName='{style.tablelabel}'>Evidence
						modality</g:Label>
				</g:HorizontalPanel>
				<g:HorizontalPanel >
					<g:Label ui:field="evidenceType" styleName='{style.tablevalue}'></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>


		</g:HorizontalPanel>


	</g:VerticalPanel>
</ui:UiBinder>