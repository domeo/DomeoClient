<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  	<ui:style type='org.mindinformatics.gwt.domeo.plugins.annotation.micropubs.ui.form.FMicroPublicationForm2.LocalCss'>
	  	.outer {
		    height: 30px;
		    padding-left: 0px;
		    padding-top: 0px;
	 	}
	 	
	 	.buttonsPanel {
			position: relative;
			right: 20px;
	  		padding-top:0px;
	  		padding-right: 0px;
	  		height: 0px;
	  		max-height: 20px;
	  		display: block;
	  	}
	  	
	  	.setPanel {
	  		padding-right: 5px;	
	  	}
	  	
	  	
	  	
	  

	  	

	  	
	  	.provenance {
	 		backgorund-color: gray;
	 		padding-top: 3px;
	 		padding-left: 10px;
	 		cursor: pointer;
    		cursor: hand;
	 	}
	 	
	 	.subTitle {
	 		/*width: 99%;*/
	 		background-color: #eee;
	 		padding-left: 4px;
	 		padding-right: 14px;
	 		padding-top: 2px;
	 		padding-bottom: 2px;
	 		font-weight: bold;
	 		border-bottom-right-radius: 10px;
			border-top-right-radius: 10px; 	 		
	 	}
	 	
	 	.subPanel {
	 		min-height: 40px;	
	 	}
	 	
	 	.newQualifierPanel {
	 		min-height: 26px;	
	 		display: inline;
	 	}
	 	
	 	.inner {
	 		padding-top: 3px;
	 		padding-bottom: 3px;
	 		cursor: pointer;
    		cursor: hand;
	 	}
	 	
	 	.inner2 {
	 		padding-top: 3px;
	 		padding-bottom: 3px;
			padding-left: 0px;
	 	}
	 	
	 	.qualifiersLabel {
	  		font-weight: bold;
	  		padding-right:3px;
	  	}
	  	
	  	.titlebar {
	  		width: 458px;	
	  		background-color:#DDDDDD;
			border-top:3px solid #ddd;
			border-left:3px solid #ddd;
	  	}
	  	
	  	.statementBody {
	  		padding-top: 3px;
	  		padding-left: 3px;
	  		color: #333;
	  		font-style: normal;
	  		width: 440px;
	  		height: 110px;
	  		font-size: 12px;
	  	}
	  	
	  	.elementType {
	  		padding-right: 2px;
	  		display: inline;
	  		white-space: nowrap;
	  	}
	  	
	  	z.titleLeft {
			padding-left:4px;
	  	}	  	
	  	
	    .labelRight4 {
	  		width: 87px;
	  		white-space: nowrap;
	  		padding-right: 3px;
	  	}
	  	
	  	.labelRight5 {
	  		width: 50px;
	  		white-space: nowrap;
	  		padding-right: 3px;
	  	}
	  	
	  	.labelRight1 {
	  		width: 70px;
	  		white-space: nowrap;
	  		padding-right: 3px;
	  	}
	  	
	    .titleRight1 {
	  		text-align: right;
			padding-right:2px;
			float: right;
			display: inline;
			/*width: 235px;*/
	  	}
	  	
	  		  	
	  	.actionIcon {
	  		cursor: pointer;
    		cursor: hand;
	  	}
	  	
	  	
		
		.citations {
	  		padding-bottom: 5px;
	  		max-width: 458px;
	  	}
	  	
	  	.indexOdd {
			padding-bottom: 5px;
			padding-left: 5px;
			padding-top: 8px;
		}
		.indexEven {
			background-color: #fff;
			padding-bottom: 5px;
			padding-left: 5px;
			padding-top: 8px;	
			
		}
		.indexWrapper{
			padding-top: 2px;
			border-bottom: 2px solid #ddd;	
			padding-bottom: 2px;
		}
		.imageWrap {
			padding-left:1px;
			padding-right:5px;
		}
		.centerText {
			text-align: left;
		}
		
		.tabPanelExample1
        {
            margin-left: 0px;
        }
        
        .link {
			cursor: pointer;
		}
		
		
		.panel {
	  		vertical-align: top;
	  		padding: 5px;
	  		padding-top: 0px;
	  	}
		
		.panelRight {
			padding-top: 0px;
			padding-left: 4px;
		}
		.panelTop {
	  		vertical-align: top;
	  		padding: 5px;
	  		padding-left: 0px;
	  		padding-top: 20px;
	  	}
	  	.leftColumn {
	  		vertical-align: top;
	  	}
	  	.rightColumn {
	  		padding-left:0px;
	  		min-width: 598px;	
	  		height: 300px;
	  	}
	  	.evidencePanel {
			font-size: 11px; 
		}
  	</ui:style>
  	
  	 
  	<ui:with field='resources' type='org.mindinformatics.gwt.domeo.client.Resources' /> 
	
<g:ScrollPanel ui:field='scrollContainer'>
  	<g:VerticalPanel ui:field='container' styleName='{style.outer}'>
  		<g:cell>		
  			<g:HorizontalPanel ui:field='headerPanel' styleName='{style.panel}'>
  				<g:HorizontalPanel ui:field='buttonsPanelSpacer'>
			  	</g:HorizontalPanel>
		  		<g:HorizontalPanel ui:field='buttonsPanel' styleName='{style.buttonsPanel}'>
		  			<g:SimplePanel styleName='{style.setPanel}'>
		  		    	<g:ListBox ui:field='annotationSet'></g:ListBox>
		  		    </g:SimplePanel>
			  	</g:HorizontalPanel>			  	
		  	</g:HorizontalPanel>
		</g:cell>
		
  		<g:HorizontalPanel styleName='{style.panelTop}' ui:field="leftColumnContainer">
  			<g:cell>
  				<g:VerticalPanel ui:field="leftColumnPanel" styleName='{style.leftColumn}'>
  					<g:TabLayoutPanel addStyleNames="{style.tabPanelExample1}" ui:field="tabPanel" barUnit="PX" barHeight="30" width="456px" height="180px">
					      <g:tab>
					          <g:header>
					             Statement
					          </g:header>
								<g:VerticalPanel styleName='{style.inner2}'>
									<g:HorizontalPanel>
								  		<g:Label>Type:</g:Label>
								  		<g:RadioButton ui:field="radioClaim" ui:name="mpType" ui:text="Claim" styleName='{style.elementType}'/>
							  			<g:RadioButton ui:field="radioHypothesis" ui:name="mpType" styleName='{style.elementType}' ui:text="Hypothesis" />
						  			</g:HorizontalPanel>
						  			<g:TextArea ui:field='statementBody' styleName='{style.statementBody}'></g:TextArea>
						  		</g:VerticalPanel>
					      </g:tab>
					      <g:tab>
					          <g:header>
					             Source
					          </g:header>
					          <g:VerticalPanel ui:field='referencePanel' styleName='{style.inner2}'></g:VerticalPanel>
					      </g:tab>
					  </g:TabLayoutPanel>
			  		
			  		<g:VerticalPanel styleName='{style.inner2}'>
			  			<g:TabLayoutPanel addStyleNames="{style.tabPanelExample1}" ui:field="evidenceTabs" barUnit="PX" barHeight="30" width="456px" >
					      <g:tab>
					          <g:header>
					             Supported By/Challenged By
					          </g:header>
								<g:ScrollPanel ui:field='supportPanel' styleName='{style.evidencePanel}'></g:ScrollPanel>
					      </g:tab>
					      <g:tab>
					          <g:header>
					             Qualified By
					          </g:header>
					         <g:ScrollPanel ui:field='qualifiersPanel' styleName='{style.evidencePanel}'></g:ScrollPanel>
					      </g:tab>
					  </g:TabLayoutPanel>
			  		</g:VerticalPanel>
  				</g:VerticalPanel>
  			</g:cell>
  			<g:cell>
  				<g:SimplePanel ui:field="panelRight" styleName='{style.panelRight}'>
	  				<g:VerticalPanel>
	  					<g:cell height="30px">
					  		<g:TabBar ui:field="tabBar" height="25px"/>
					  	</g:cell>
					  	<g:VerticalPanel ui:field='rightColumn' styleName='{style.rightColumn}'>	
					  	</g:VerticalPanel>
				 	</g:VerticalPanel>
				 </g:SimplePanel>
			</g:cell>
		</g:HorizontalPanel>
		<g:SimplePanel ui:field="panelBelow" styleName='{style.panel}'></g:SimplePanel>
  	</g:VerticalPanel>
  </g:ScrollPanel>
</ui:UiBinder>
