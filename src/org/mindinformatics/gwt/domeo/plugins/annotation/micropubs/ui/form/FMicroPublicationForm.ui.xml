<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  	<ui:style type='org.mindinformatics.gwt.domeo.plugins.annotation.micropubs.ui.form.FMicroPublicationForm.LocalCss'>
	  	.outer {
		    height: 30px;
		    padding-left: 0px;
		    padding-top: 0px;
		    width: 100%;
	 	}
	 	
	 	.buttonsPanel {
			position: absolute;
			right: 20px;
	  		float:right;
	  		padding-top:4px;
	  		padding-right: 0px;
	  		padding-left: 2px;
	  		height: 0px;
	  		max-height: 20px;
	  		display: block;
	  		top: 0px;
	  		z-index: 10000;
	  	}
	  	
	  	.setPanel {
	  		padding-right: 5px;	
	  	}
	  	
	  	.rightColumn {
	  		padding-top: 0px;
	  	}
	  	
	  	.rightColumnContent {
	  		padding-left:0px;
	  		/*padding-top: 24px;*/
	  		width: 100%;
	  		min-width: 598px;	
	  		height: 300px;
	  	}
	  	
	  	.leftColumn {
	  		width: 464px;	
	  		vertical-align: top;
	  	}
	  	
	  	.panel {
	  		width: 100%;
	  		vertical-align: top;
	  		padding-top: 10px;
	  	}
	  	
	  	.provenance {
	 		backgorund-color: gray;
	 		padding-top: 3px;
	 		padding-left: 10px;
	 		cursor: pointer;
    		cursor: hand;
	 	}
	 	
	 	.subTitle {
	 		/*width: 99%;*/
	 		background-color: #eee;
	 		padding-left: 4px;
	 		padding-right: 14px;
	 		padding-top: 2px;
	 		padding-bottom: 2px;
	 		font-weight: bold;
	 		border-bottom-right-radius: 10px;
			border-top-right-radius: 10px; 	 		
	 	}
	 	
	 	.subPanel {
	 		min-height: 40px;	
	 	}
	 	
	 	.newQualifierPanel {
	 		min-height: 26px;	
	 		display: inline;
	 	}
	 	
	 	.inner {
	 		padding-top: 3px;
	 		padding-bottom: 3px;
	 		cursor: pointer;
    		cursor: hand;
	 	}
	 	
	 	.inner2 {
	 		padding-top: 3px;
	 		padding-bottom: 3px;
			padding-left: 0px;
	 	}
	 	
	 	.qualifiersLabel {
	  		font-weight: bold;
	  		padding-right:3px;
	  	}
	  	
	  	.titlebar {
	  		width: 458px;	
	  		background-color:#DDDDDD;
			border-top:3px solid #ddd;
			border-left:3px solid #ddd;
	  	}
	  	
	  	.statementBody {
	  		padding-top: 3px;
	  		padding-left: 3px;
	  		color: #333;
	  		font-style: normal;
	  		width: 440px;
	  		height: 130px;
	  		font-size: 12px;
	  	}
	  	
	  	.elementType {
	  		padding-right: 2px;
	  		display: inline;
	  		white-space: nowrap;
	  	}
	  	
	  	z.titleLeft {
			padding-left:4px;
	  	}	  	
	  	
	    .labelRight4 {
	  		width: 87px;
	  		white-space: nowrap;
	  		padding-right: 3px;
	  	}
	  	
	  	.labelRight5 {
	  		width: 50px;
	  		white-space: nowrap;
	  		padding-right: 3px;
	  	}
	  	
	  	.labelRight1 {
	  		width: 70px;
	  		white-space: nowrap;
	  		padding-right: 3px;
	  	}
	  	
	    .titleRight1 {
	  		text-align: right;
			padding-right:2px;
			float: right;
			display: inline;
			/*width: 235px;*/
	  	}
	  	
	  		  	
	  	.actionIcon {
	  		cursor: pointer;
    		cursor: hand;
	  	}
	  	
	  	.evidencePanel {
			max-height:286px;
			font-size: 11px;
		}
		
		.citations {
	  		padding-bottom: 5px;
	  		max-width: 458px;
	  	}
	  	
	  	.indexOdd {
			border-left: 6px solid #ddd;
			padding-bottom: 5px;
			padding-left: 5px;
			padding-top: 8px;
		}
		.indexEven {
			border-top: 1px solid #ddd;
			border-left: 6px solid green;
			padding-bottom: 5px;
			padding-left: 5px;
			padding-top: 8px;		
		}
		.imageWrap {
			padding-left:1px;
			padding-right:5px;
		}
		.centerText {
			text-align: left;
		}
		
		 .tabPanelExample1
        {
            margin-left: 2px;
        }
  	</ui:style>
  	
  	 
  	<ui:with field='resources' type='org.mindinformatics.gwt.domeo.client.Resources' /> 
	

  	<g:VerticalPanel ui:field='container' styleName='{style.outer}'>
  		<g:HorizontalPanel ui:field='buttonsPanel' styleName='{style.buttonsPanel}'>
  			<g:SimplePanel styleName='{style.setPanel}'>
  		    	<g:ListBox ui:field='annotationSet'></g:ListBox>
  		    </g:SimplePanel>
	  	</g:HorizontalPanel>
	  	<!--  
	  	<g:HorizontalPanel ui:field='header' styleName='{style.inner}'>
  			<g:Label ui:field="antibodiesLabel" styleName='{style.qualifiersLabel}'>Antibodies:</g:Label>
  			<g:FlowPanel ui:field="newQualifiers" styleName='{style.newQualifierPanel}'></g:FlowPanel>
  		</g:HorizontalPanel>
  		-->

  		<g:HorizontalPanel styleName='{style.panel}'>
  			<g:cell width="466px">
  				<g:VerticalPanel styleName='{style.leftColumn}'>
  					<g:TabLayoutPanel addStyleNames="{style.tabPanelExample1}" ui:field="tabPanel" barUnit="PX" barHeight="30" width="456px" height="180px">
					      <g:tab>
					          <g:header>
					             Statement
					          </g:header>
								<g:VerticalPanel styleName='{style.inner2}'>
						  			<g:TextArea ui:field='statementBody' styleName='{style.statementBody}'></g:TextArea>
						  		</g:VerticalPanel>
					      </g:tab>
					      <g:tab>
					          <g:header>
					             Reference
					          </g:header>
					          <g:HTML><h2>Hello tab 2</h2></g:HTML>
					      </g:tab>
					  </g:TabLayoutPanel>
			  		
			  		<g:VerticalPanel styleName='{style.inner2}'>
			  		<!-- 
			  			<g:VerticalPanel ui:field='citations' styleName='{style.citations}'>
			  				
				  			<g:HorizontalPanel styleName='{style.titlebar}'>
				  				<g:Label styleName='{style.titleLeft}'>Supported by:</g:Label>
				  				<g:HorizontalPanel styleName='{style.titleRight1}'>
				  					<g:Label styleName='{style.labelRight4}'>Add Reference</g:Label>
				  					<g:Image ui:field="addCitationImage" styleName='{style.actionIcon}'  resource='{resources.addLittleIcon}'></g:Image>
				  					<g:Label styleName='{style.labelRight5}'>Add Data</g:Label>
				  					<g:Image ui:field="addDataImage" styleName='{style.actionIcon}'  resource='{resources.addLittleIcon}'></g:Image>
				  				</g:HorizontalPanel>
				  			</g:HorizontalPanel>
				  			-->
				  			
				  			<g:TabLayoutPanel addStyleNames="{style.tabPanelExample1}" ui:field="evidenceTabs" barUnit="PX" barHeight="30" width="456px" height="288px">
						      <g:tab>
						          <g:header>
						             Supported By
						          </g:header>
									<g:ScrollPanel ui:field='supportPanel' styleName='{style.evidencePanel}'></g:ScrollPanel>
						      </g:tab>
						      <g:tab>
						          <g:header>
						             Challenged By
						          </g:header>
						          <g:HTML><h2>Hello tab 2</h2></g:HTML>
						      </g:tab>
						      <g:tab>
						          <g:header>
						             Qualified By
						          </g:header>
						          <g:HTML><h2>Hello tab 2</h2></g:HTML>
						      </g:tab>
						  </g:TabLayoutPanel>
						  <!-- 
				  		</g:VerticalPanel>
				  		-->
			  		</g:VerticalPanel>
  				</g:VerticalPanel>
  			</g:cell>
  			<g:cell>
  				<g:VerticalPanel styleName='{style.rightColumn}'>
  					<g:cell height="30px">
				  		<g:TabBar ui:field="tabBar" height="25px"/>
				  	</g:cell>
				  	<g:VerticalPanel ui:field='rightColumn' styleName='{style.rightColumnContent}'>
			  			
				  	</g:VerticalPanel>
				 </g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
  	</g:VerticalPanel>
</ui:UiBinder>
