<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.outer {
		    padding-left: 4px;
		    padding-top: 6px;
		    padding-bottom:16px;
		    width: 100%;
		}	 
		
		.header {
		}
		.summary {
			padding-bottom: 10px;
		}
		.content {
			padding-bottom:20px;

		}
	</ui:style>

  	<g:FlowPanel ui:field='main' styleName='{style.outer}'>
  		<g:HorizontalPanel styleName='{style.header}' ui:field='header'>
  		</g:HorizontalPanel>
  		<g:HorizontalPanel styleName='{style.summary}' ui:field='summary'>
  		</g:HorizontalPanel>
  		<g:HorizontalPanel styleName='{style.content}' ui:field='content'>
  			<g:FlowPanel ui:field='termsPanel'></g:FlowPanel>
  		</g:HorizontalPanel>
  		<g:FlowPanel ui:field='buttonsPanel'></g:FlowPanel>
  	</g:FlowPanel>
</ui:UiBinder>
