<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>	
		.body {
			width: 100%;
			height: 80px;
			padding: 0px;
		}
		
		.label {
			padding-top: 5px;
			font-weight: bold;	
			display: inline;
			border-bottom: 1px #ddd solid;
		}
		
		.editableDeckPanel {
			width: 98%;	
		}
		
		.activeIcon {
			height: 16px;
			width: 16px;
			cursor: pointer;	
			display: inline;	
		}
		
		.title {
			border-top: 1px solid #ccc;	
			border-bottom: 1px solid #ddd;	
			background-color: #eee;
		}
		
		.inline {
			display: inline;	
		}
		
		.inlineWithBottom {
			display: inline;	
			padding-bottom: 8px;
		}
		
		.outer {
		    padding-bottom:16px;
		    width: 100%;
		    font-size: 11px;
		}
		
		.content {
			padding: 0;	
			margin: 0;
			height: 100%;
		}
		
		.scrollContent {
			padding: 0;	
			margin: 0;
		}
	
		.provenanceInline {
			display: inline;	
			padding-right: 4px;
		}
		.provenance {	
			padding-right: 4px;
		}
		
		.infoBarRight {
			color: #aaa;
			text-align: right;
			border-top: 3px solid #ddd;	
			padding-right: 3px;
		}
		
		.contentPanel {
			width: 100%;	
			padding: 0px;
		}
	</ui:style>
	<g:VerticalPanel ui:field='main' styleName='{style.outer}'>
		<g:CheckBox ui:field='longestOnly'>Longest Only</g:CheckBox>
		<g:CheckBox ui:field='includeAbbrev'>Include Abbreviations</g:CheckBox>
		<g:CheckBox ui:field='includeAcronym'>Include Acronym</g:CheckBox>
		<g:CheckBox ui:field='includeNumbers'>Include Numbers</g:CheckBox>
	</g:VerticalPanel>
</ui:UiBinder>
