<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:my='urn:import:org.mindinformatics.gwt.framework.widget'>

	<ui:style>	
		.body {
			width: 100%;
			height: 80px;
			padding: 3px;
		}
		
		.label {
			padding-top: 5px;
			font-weight: bold;	
			display: inline;
			border-bottom: 1px #ddd solid;
		}
		
		.editableDeckPanel {
			width: 98%;	
		}
		
		.activeIcon {
			cursor: pointer;
			cursor: hand;			
		}
		
		.title {
			border-top: 1px solid #ccc;	
			border-bottom: 1px solid #ddd;	
			background-color: #eee;
		}
		
		.inline {
			display: inline;	
		}
		
		.outer {
		    padding-bottom:16px;
		    width: 100%;
		    font-size: 11px;
		}
		
		.content {
			padding: 0;	
			margin: 0;
		}
		
		.provenanceInline {
			display: inline;	
			padding-right: 4px;
		}
		.provenance {	
			padding-right: 4px;
		}
		
		.infoBarRight {
			color: #aaa;
			text-align: right;
			border-top: 3px solid #ddd;	
			padding-right: 3px;
		}
		
		.contentPanel {
			width: 100%;	
			padding: 0px;
		}
		
		.scrollContent {
			padding: 0;	
			margin: 0;
		}
		
	</ui:style>
	<g:VerticalPanel ui:field='main' styleName='{style.outer}'>
		<g:TabLayoutPanel barHeight="32" barUnit="PX" ui:field="tabToolsPanel" height="430px" >
	        <g:tab>
	        	 <g:header>
	                <div>
	                    <span>OpenTrials</span>
	                </div>
	            </g:header>
	            <g:FlowPanel ui:field='body' styleName=''>
					<g:VerticalPanel styleName='{style.body}' ui:field='content' spacing="3">	
						<!-- 
						<g:cell height="20" horizontalAlignment='ALIGN_CENTER'>
							<g:HTMLPanel  ui:field="title" styleName='{style.title}'>Resource</g:HTMLPanel>
						</g:cell>
					 	-->
						<g:cell height="20">
							<g:FlowPanel>
								<g:Label styleName='{style.label}'> URL</g:Label>
								<g:Image ui:field='urlImage' styleName='{style.activeIcon}'/>
							</g:FlowPanel>
						</g:cell>
						<g:cell height="20px">
							<my:EditableLabel ui:field='uriField'/>
						</g:cell>
						<!-- 
						<g:cell height="20px">
							<g:Label styleName='{style.label}'>Source</g:Label>
						</g:cell>
						<g:cell height="25px">
							<g:FlowPanel ui:field='sourceField' styleName='{style.inline}'/>
						</g:cell>	
						-->
						<g:cell height="20px">
							<g:Label styleName='{style.label}'>Is About</g:Label>
						</g:cell>
						<g:cell height="25px">
							<g:FlowPanel ui:field='aboutField'/>
						</g:cell>	
						<g:HTMLPanel></g:HTMLPanel>	
					</g:VerticalPanel>
					<g:FlowPanel styleName='{style.infoBarRight}'>
						<g:HTML ui:field='extractionSourceDetails' styleName='{style.provenance}'/>
						<g:Label ui:field='extractorProvenanceDetails' styleName='{style.provenanceInline}'/>
						<g:Image ui:field='extractionProvenanceImage' styleName='{style.activeIcon}'/>
						<g:Label ui:field='extractionDateDetails' styleName='{style.provenance}'/>
					</g:FlowPanel>
				</g:FlowPanel>
			</g:tab>
	        <g:tab>
	        	<g:header>
	                <div>
	                    <span>References</span>
	                </div>
	            </g:header>
	            <g:VerticalPanel>
		            <g:VerticalPanel ui:field='bibliographyToolbarPanel' styleName='{style.contentPanel}'/>
		            <g:ScrollPanel ui:field='referencesPanel' styleName='{style.scrollContent}'>
		            	<g:HTML>No references available</g:HTML>
		            </g:ScrollPanel>
	            </g:VerticalPanel>
	        </g:tab>
			<g:tab>
	        	 <g:header>
	                <div>
	                    <span>General</span>
	                </div>
	            </g:header>
	            <g:SimplePanel ui:field='contentPanel' styleName='{style.content}'/>
	        </g:tab>
		</g:TabLayoutPanel>
	</g:VerticalPanel>
</ui:UiBinder>