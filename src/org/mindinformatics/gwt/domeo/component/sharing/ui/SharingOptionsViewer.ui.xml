<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  
    <ui:style>
	  	.outer {
		    height: 100%;
		    padding-top: 5px;
	 	}
	 	
	 	.shareAllBox {
			width: 400px;
			height: 100px;
		}
	 </ui:style>
  
  	<g:VerticalPanel styleName='{style.outer}'>
  		<g:Label>You can use this URL to share current workspace</g:Label>
  		<g:TextArea ui:field="shareAllBox" styleName='{style.shareAllBox}'></g:TextArea>
  	</g:VerticalPanel>
</ui:UiBinder>