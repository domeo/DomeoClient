<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  
    <ui:style>
	  	.outer {
		    height: 100%;
		    padding-top: 5px;
	 	}
	 	
	 	.footer {
			padding-top: 5px;
			padding-bottom: 5px;
		}
	 </ui:style>
  
  	<g:VerticalPanel styleName='{style.outer}'>
  		<g:HorizontalPanel width="800px" styleName='{style.footer}'>
  		<g:cell horizontalAlignment='ALIGN_LEFT' width='240px'>
  			<g:VerticalPanel ui:field="availableServices"></g:VerticalPanel>
  		</g:cell>
  		<g:cell horizontalAlignment='ALIGN_LEFT' width='440px'>
				<g:VerticalPanel ui:field='annotatorDetails'></g:VerticalPanel>
			</g:cell>
  		</g:HorizontalPanel>
  		<g:HorizontalPanel ui:field='footerPanel' width="800px" styleName='{style.footer}'>
			<g:cell horizontalAlignment='ALIGN_LEFT' width='140px'>
				<g:Button ui:field='annotateButton'>Annotate</g:Button>
			</g:cell>			
		</g:HorizontalPanel>
  	</g:VerticalPanel>
</ui:UiBinder>