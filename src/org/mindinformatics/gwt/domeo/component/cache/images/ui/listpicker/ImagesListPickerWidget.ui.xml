<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  
    <ui:style type='org.mindinformatics.gwt.domeo.component.cache.images.ui.listpicker.ImagesListPickerWidget.LocalCss'>
	  	.outer {
		    height: 100%;
		    width: 100%;
		    border-top: 1px solid #CCC;
		    border-left: 1px solid #CCC;
		    border-right: 1px solid #CCC;
		   	border-bottom: 1px solid #CCC;
	 	}
	 	
	.indexOdd {
		border-left: 6px solid #ddd;
		padding-bottom: 5px;
		padding-left: 5px;
		padding-top: 8px;
	}
	.indexEven {

		border-left: 6px solid green;
		padding-bottom: 5px;
		padding-left: 5px;
		padding-top: 8px;		
	}
	.imageWrap {
		padding-left:1px;
		padding-right:5px;
	}
	.centerText {
		text-align: left;
	}
	 </ui:style>
  
  	<g:VerticalPanel ui:field='main' styleName='{style.outer}'>
  		<g:ScrollPanel ui:field="panel" width="100%" height="390px"></g:ScrollPanel>
  	</g:VerticalPanel>
</ui:UiBinder>