			<g:cell horizontalAlignment='ALIGN_LEFT' width='140px'>
				<g:Button ui:field='annotateButton'>Apply</g:Button>
			</g:cell>
		</g:HorizontalPanel>
  	</g:VerticalPanel>
</ui:UiBinder>