<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  
    <ui:style>
	  	.outer {
		    height: 100%;
		    padding-top: 5px;
	 	}
	 	
	 	.inner {
	
		}
	 	
	 	.footer {
			padding-top: 5px;
			padding-bottom: 5px;
		}
	 </ui:style>
  
  	<g:VerticalPanel styleName='{style.outer}'>
  		<g:VerticalPanel ui:field="groupsList" styleName='{style.inner}'></g:VerticalPanel>  		
