<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

<ui:style>
	.outer {
	    padding-left: 4px;
	    padding-top: 2px;
	    padding-bottom:16px;
	    min-height: 400px;
	    font-size: 11px;
	}
	
  	.close {
		cursor: pointer;
    	cursor: hand;
  	}

  	.scrollPanel {
  		top: 5px;
  		width: 100%;
  		max-height: 600px;	
  	}
  	
  	.tabToolsPanel {}
  	
</ui:style>

  	<g:FlowPanel ui:field='main' styleName='{style.outer}'>
  		<g:ScrollPanel ui:field='scrollPanel' styleName='{style.scrollPanel}' >
  		</g:ScrollPanel>  		
  	</g:FlowPanel>
</ui:UiBinder>
